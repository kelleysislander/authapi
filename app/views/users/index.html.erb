<% title "Users" %>

<div class="info subcontent">
  <ul>
    <% for user in @users %>
      <li><table>
       <tr>
          <%=h user.username %>
          <% if user.is_admin? %>
            Admin
          <% else %>
            User
          <% end %>
        </tr>
        <tr><td><%= link_to "Edit", edit_user_path(user), :class => "button bottom row", :rel => "_ajax" %>
        <%= link_to "Delete", user, :confirm => 'Are you sure?', :method => :delete, :class => "button bottom row" %></td></tr>
        </table></li>
    <% end %>
  </ul>
 
  <p>
    <%= link_to "New user", new_user_path, :class => "button bottom row", :rel => "_ajax" %>
  </p>
  <div class="clear"></div>
</div>
